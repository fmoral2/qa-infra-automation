---
# Traefik Ingress Policy for K3s {{ kubernetes_version | default('') }}
{% if not ('traefik' in (role_server_flags | default('')) and 'disable' in (role_server_flags | default(''))) %}
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: allow-all-traefik-v121-ingress
  namespace: kube-system
spec:
  podSelector:
    matchLabels:
      app.kubernetes.io/name: traefik
  ingress:
    - {}
  policyTypes:
    - Ingress
{% else %}
# Traefik is disabled - no ingress policy needed
{% endif %}
